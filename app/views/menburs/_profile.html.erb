<div class="col-sm-8 col-md-10 col-lg-8 mt-6" >
  <% if @menbur == @current_menbur %>
    <%= tag.h1 "マイページ", class:"pb-3 my-3" %>
  <% else %>
    <%= tag.h1 "#{@menbur.nickname}のプロフィール", class:"pb-3 my-3" %>
  <% end %>

  <div class="row justify-content-center">
    <%= image_tag @menbur.profile_image.url, class:"col-md-5 col-md-4 mx-2", style:"width:100; height:50;"%>
    <div class="col-md-6">
      <div class="d-flex justify-content-left align-items-end mt-4 mt-md-0">
        <%= image_tag @menbur.icon_image.url, class:"mx-3", style:"width:70px;border-radius:30%;"%>
        <%= tag.h2 @menbur.nickname %>
      </div>        
      <%= tag.p @menbur.profile, class:"mt-3 my-2" %>
    </div>
  </div>
</div>