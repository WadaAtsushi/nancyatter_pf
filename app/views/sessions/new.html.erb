<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 mb-5 mt-5" >
      <%= tag.h1 "ログイン" %>
        <%= form_for(:session, url: login_form_path) do |f| %> 
          <%= f.label :"メールアドレス", class: "mt-3" %>
          <%= f.text_field :email, class: "form-control", placeholder: "sample@sample.com" %>
          <%= f.label :"パスワード", class: "mt-3" %>
          <%= f.text_field :password, class: "form-control", type: "password" %>
          <%= f.submit "ログイン" , class: "btn btn-primary mt-4" %>
        <% end %>

        <%= tag.p "ログイン用アドレス　　： test@test.com", class:"mt-5" %>
        <%= tag.p "ログイン用パスワード　： test" %>
    </div>
  </div>
</div>

