<div class="container-fluid" >
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 mb-5 mt-5" >
      <%= tag.h1 "会員登録" %>
        <%= form_for(@user, url: user_create_path) do |f| %>
          <%= f.label :"名前", class: "mt-3 " %>
          <%= f.text_field :name, class: "form-control", placeholder: "sample taro" %>
          <%= f.label :"メールアドレス", class: "mt-3"  %>
          <%= f.text_field :email, class: "form-control", placeholder: "sample@sample.com" %>
          <%= f.label :"パスワード", class: "mt-3" %>
          <%= f.text_field :password, class: "form-control", type: "password" %>
          <%= f.label :"パスワード（再確認）", class: "mt-3" %>
          <%= f.text_field :password_confirmation, class: "form-control", type: "password" %>
          <%= f.submit :"登録", class: "btn btn-primary mt-4"  %>
        <% end %>
    </div>
  </div>
</div>