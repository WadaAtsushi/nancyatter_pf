<div class="container-fluid" >
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5 mt-5" >
      <%= tag.h1 "新規投稿" %>
        <%= form_for(@post, url: post_create_path) do |f| %>
          <%= f.label :"タイトル", class: "mt-3" %>
          <%= f.text_field :title, class: "form-control" %>
          <% if @current_app.feature_category == "implement" %>
            <%= tag.div f.label :"カテゴリー", class:"post-new-label mt-3" %>
            <%= f.collection_select :postcategory_id, Postcategory.where(nancyatterapp_id: @current_app.id), :id, :category_name, {include_blank: "選択してください"},{class: "form-control input-sm"} %>
          <% end %>
          <%= f.label :"投稿内容", class: "mt-3" %>
          <%= f.text_area :content, class: "form-control" %>
          <% if @current_app.feature_image == "implement" %>
            <%= tag.div f.label :"画像", class: "mt-4" %>
            <%= f.file_field :post_image, class:"my-2" %>
          <% end %>
          <%= tag.div f.submit :"投稿", class: "btn btn-primary mt-3" %>
        <% end %>
    </div>
  </div>
</div>
